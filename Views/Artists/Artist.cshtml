@using RanchDuBonheur.Extensions
@model RanchDuBonheur.Models.Pocos.Artists.Artist

@{
    ViewBag.Title = @Model.Name;
    Layout = "_Layout";
    var artist = Model;
    var currentUrl = ViewData["OG:Url"] as string;
    var facebookShareUrl = $"https://www.facebook.com/sharer/sharer.php?u={Uri.EscapeDataString(currentUrl)}";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card mt-4 cards-color no-hover-effect">
                <div class="card-header text-center">
                    <h1>@artist.Name</h1>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 p-1 rounded d-flex align-items-center">
                            <img src="@artist.PhotoUrl" alt="Photo de @artist.Name" class="img-fluid mx-auto">
                        </div>
                        <div class="col-md-8 p-4 justified-text">
                            <p>@Html.FormatWithLineBreaks(artist.Description)</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">

                <a href="@facebookShareUrl" target="_blank" class="btn btn-social btn-facebook">
                    <i class="bi bi-facebook"></i> Partager sur Facebook
                </a>

                <a href="@Url.Action("Index", "Artists")" class="btn btn-primary">Retour</a>
            </div>
        </div>
    </div>
</div>